{
    "name": "PHPUnit",
    "id": "phpunit",
    "version": "0.0.1",
    "description": "Installs PHPUnit",
    "documentationURL": "https://github.com/gremo/devcontainers-features/tree/main/src/phpunit",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest",
                "8.5.32",
                "7.5.20"
            ],
            "default": "latest",
            "description": "The version to install (\"latest\" or exact version)"
        },
        "installLib": {
            "type": "boolean",
            "default": true,
            "description": "Whether to install source code or not"
        }
    }
}
